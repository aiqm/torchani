name: conda-release

on:
  push:
    branches:
      - master

env:
  REGISTRY: ghcr.io
  IMAGE_NAME: ${{ github.repository }}

jobs:
  conda-release:
    runs-on: [self-hosted, ipickering]
    permissions:
      contents: read
      packages: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
        with:
          token: ${{ secrets.PAT }}
          submodules: recursive

      - name: Login to GitHub Container Registry
        uses: docker/login-action@v2
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build Conda && Release
        run: >-
          docker run
          --rm
          --gpus all
          -v $PWD:/examples
          ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}_conda:latest
          bash -c
          "mkdir -p ~/.ssh
          && echo \"${{ secrets.SERVER_PUBKEY }}\" > ~/.ssh/id_rsa.pub && echo \"${{ secrets.SERVER_PRIKEY }}\" > ~/.ssh/id_rsa && chmod 400 ~/.ssh/id_rsa
          && nvidia-smi
          && cd /examples
          && export PYTHON_VERSION=3.10
          && export CONDA_TOKEN=${{ secrets.CONDA_TOKEN }}
          && export SERVER_USERNAME=${{ secrets.SERVER_USERNAME }}
          && export SERVER_PORT=${{ secrets.SERVER_PORT }}
          && ./conda/build_conda.sh release
          && rm ~/.ssh/id_rsa.pub && rm ~/.ssh/id_rsa"

concurrency:
  group: conda-release
  cancel-in-progress: true
